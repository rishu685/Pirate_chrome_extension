{
  "manifest_version": 3,
  "name": "Pirate Downloader",
  "version": "1.2",
  "description": "A pirate-themed download experience with animated progress.",
  
  "permissions": [
    "downloads",
    "notifications"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "icons": {
    "16": "icons/icon128.png",
    "48": "icons/icon128.png",
    "128": "icons/icon128.png"
  },
  
  "action": {
    "default_icon": {
      "16": "icons/icon128.png",
      "48": "icons/icon128.png", 
      "128": "icons/icon128.png"
    },
    "default_title": "Pirate Downloader"
  }
}